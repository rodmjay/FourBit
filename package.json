{
  "name": "fourbit",
  "version": "1.0.0",
  "description": "FourBit Games with Shared SDK",
  "scripts": {
    "build:sdk": "cd SDK && tsc",
    "build:game1": "cd Games/Game1 && tsc",
    "build:game2": "cd Games/Game2 && tsc",
    "build:game3": "cd Games/Game3 && tsc",
    "build:djbooth": "cd Games/DJBooth && tsc",
    "build:chorddetection": "cd Games/ChordDetection && pip install -r requirements.txt",
    "build": "npm run build:sdk && npm run build:game1 && npm run build:game2 && npm run build:game3 && npm run build:djbooth && npm run build:chorddetection",
    "serve:djbooth": "live-server --port=8080 --open=Games/DJBooth/index.html",
    "start:djbooth": "concurrently \"cd Games/DJBooth && tsc -w\" \"npm run serve:djbooth\"",
    "start:chorddetection": "cd Games/ChordDetection && source venv/bin/activate && python app.py"
  },
  "devDependencies": {
    "typescript": "^5.0.0",
    "live-server": "^1.2.1",
    "concurrently": "^7.0.0"
  }
}
